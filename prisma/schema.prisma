generator client {
  provider = "prisma-client-js"
}
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Usuario {
  id Int @id @default(autoincrement())  
  nombre String
  apellido String
  ci Int @unique
  rolId Int? 
  correo String @unique
  password String @unique
  telefono Int @unique
  direccion String  
  Rol Rol? @relation(fields: [rolId], references: [id])  
}
model Rol {
  id Int @id @default(autoincrement())
  descripcion String @unique
  usuario Usuario[]
}

//El modelo Usuario representa una entidad de usuario con varios campos, incluyendo información personal como nombre, apellido, correo, etc. El campo rolId es una clave foránea que puede estar asociada a un rol a través de la relación Rol.

//El modelo Rol representa una entidad de roles. Tiene un campo descricion que almacena una descripción del rol y una relación inversa llamada usuarios, que indica que un rol puede estar asociado a varios usuarios a través de la relación con el modelo Usuario.

model Producto {
  id Int @id @default(autoincrement())
  nombre String
  descripcion String @unique
  precio Decimal
  stock Int
  catId Int?
  categoria Categoria? @relation(fields: [catId], references: [id])
}

model Categoria {
  id Int @id @default(autoincrement())
  descripcion String @unique
  producto Producto[]  
}

